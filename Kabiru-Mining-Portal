    <!-- Notification -->
    <div id="notification" class="notification"></div>


    <script>
        // Debug logging
        function debugLog(msg, type = 'info') {
            const console = document.getElementById('debugConsole');
            const line = document.createElement('div');
            line.className = `debug-line debug-${type}`;
            line.textContent = `[${new Date().toLocaleTimeString()}] ${msg}`;
            console.appendChild(line);
            console.scrollTop = console.scrollHeight;
            window.console.log(msg);
        }

        // Global variables
        let app, db, auth;
        let currentUser = null;
        let userBalance = 0.0000;
        let minedBalance = 0.0000;
        let receivedBalance = 0.0000;
        let reserveBalance = 0.0000;
        let lockedBalance = 0.0000;
        let totalTasksCompleted = 0;
        let miningRate = 0.001;
        let isMining = false;
        let userWalletAddress = '';
        let transactionHistory = [];

        debugLog('üöÄ Phase 2 Starting...', 'info');

        // Firebase config
        const firebaseConfig = {
            apiKey: "AIzaSyCZhPjrl18PuyBh01Ou2KQMs-Ph3x2GP7o",
            authDomain: "kabiru-mining-app.firebaseapp.com",
            projectId: "kabiru-mining-app",
            storageBucket: "kabiru-mining-app.appspot.com",
            messagingSenderId: "217095254990",
            appId: "1:217095254990:web:9eb44eff825666995fb19f"
        };

        // Initialize Firebase
        try {
            app = firebase.initializeApp(firebaseConfig);
            db = firebase.firestore();
            auth = firebase.auth();
            debugLog('‚úÖ Firebase initialized', 'success');
        } catch (error) {
            debugLog('‚ùå Firebase error: ' + error.message, 'error');
        }

        // Generate wallet address
        function generateWalletAddress() {
            const chars = '0123456789abcdef';
            let address = '0x';
            for (let i = 0; i < 40; i++) {
                address += chars[Math.floor(Math.random() * chars.length)];
            }
            return address;
        }

        // Show notification
        function showNotification(message) {
            const notif = document.getElementById('notification');
            notif.textContent = message;
            notif.classList.add('show');
            setTimeout(() => {
                notif.classList.remove('show');
            }, 3000);
        }

        // Generate transaction ID
        function generateTransactionId() {
            return 'tx_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9);
        }

        // Save user data
        async function saveUserData() {
            const userData = {
                balance: userBalance,
                minedBalance: minedBalance,
                receivedBalance: receivedBalance,
                reserveBalance: reserveBalance,
                lockedBalance: lockedBalance,
                tasksCompleted: totalTasksCompleted,
                miningRate: miningRate,
                walletAddress: userWalletAddress,
                transactionHistory: transactionHistory,
                lastActive: new Date().toISOString()
            };

            localStorage.setItem('kabiruMiningData', JSON.stringify(userData));
            debugLog('üíæ Data saved to localStorage', 'info');

            if (currentUser && db) {
                try {
                    await db.collection('users').doc(currentUser.uid).set({
                        ...userData,
                        email: currentUser.email,
                        displayName: currentUser.displayName,
                        lastActive: firebase.firestore.FieldValue.serverTimestamp()
                    }, { merge: true });
                    debugLog('üíæ Data saved to Firestore', 'success');
                } catch (error) {
                    debugLog('‚ö†Ô∏è Firestore save error: ' + error.message, 'error');
                }
            }
        }

        // Load user data
        async function loadUserData(user) {
            debugLog('üìÇ Loading user data...', 'info');

            // Try Firestore first
            if (db) {
                try {
                    const doc = await db.collection('users').doc(user.uid).get();
                    if (doc.exists) {
                        const data = doc.data();
                        minedBalance = data.minedBalance || 0;
                        receivedBalance = data.receivedBalance || 0;
                        reserveBalance = data.reserveBalance || 0;
                        lockedBalance = data.lockedBalance || 0;
                        userBalance = minedBalance + receivedBalance;
                        totalTasksCompleted = data.tasksCompleted || 0;
                        miningRate = data.miningRate || 0.001;
                        userWalletAddress = data.walletAddress || generateWalletAddress();
                        transactionHistory = data.transactionHistory || [];
                        debugLog('‚úÖ Loaded from Firestore', 'success');
                        updateDisplay();
                        return;
                    }
                } catch (error) {
                    debugLog('‚ö†Ô∏è Firestore load error: ' + error.message, 'error');
                }
            }

            // Fallback to localStorage
            const savedData = localStorage.getItem('kabiruMiningData');
            if (savedData) {
                const data = JSON.parse(savedData);
                minedBalance = data.minedBalance || 0;
                receivedBalance = data.receivedBalance || 0;
                reserveBalance = data.reserveBalance || 0;
                lockedBalance = data.lockedBalance || 0;
                userBalance = data.balance || 0;
                totalTasksCompleted = data.tasksCompleted || 0;
                miningRate = data.miningRate || 0.001;
                userWalletAddress = data.walletAddress || generateWalletAddress();
                transactionHistory = data.transactionHistory || [];
                debugLog('‚úÖ Loaded from localStorage', 'success');
            } else {
                debugLog('‚ÑπÔ∏è No saved data, starting fresh', 'info');
                userWalletAddress = generateWalletAddress();
            }

            updateDisplay();
        }

        // Update display
        function updateDisplay() {
            userBalance = minedBalance + receivedBalance;
            
            document.getElementById('balance').textContent = userBalance.toFixed(4) + ' iKb';
            document.getElementById('totalBalance').textContent = userBalance.toFixed(4) + ' iKb';
            document.getElementById('minedBalance').textContent = minedBalance.toFixed(4) + ' iKb';
            document.getElementById('tasksCompleted').textContent = totalTasksCompleted;
            document.getElementById('miningRate').textContent = miningRate.toFixed(3);
            
            if (currentUser) {
                const name = currentUser.displayName || 'User';
                const initial = name.charAt(0).toUpperCase();
                
                document.getElementById('userName').textContent = name;
                document.getElementById('userEmail').textContent = currentUser.email;
                document.getElementById('userAvatar').textContent = initial;
                
                // Update modal fields
                document.getElementById('modalUserName').textContent = name;
                document.getElementById('modalUserEmail').textContent = currentUser.email;
                document.getElementById('modalUserAvatar').textContent = initial;
                document.getElementById('modalUserBalance').textContent = userBalance.toFixed(4) + ' iKb';
                document.getElementById('modalUserTasks').textContent = totalTasksCompleted;
            }
        }

        // Mining function
        async function mineTokens(type, reward) {
            debugLog(`‚õèÔ∏è Mining ${type} started`, 'info');
            
            if (isMining) {
                showNotification('Already mining! Please wait.');
                return;
            }

            isMining = true;
            document.getElementById('miningStatus').textContent = 'Mining...';
            
            // Disable buttons
            document.getElementById('sovereignBtn').disabled = true;
            document.getElementById('valueBtn').disabled = true;
            document.getElementById('reserveBtn').disabled = true;
            
            showNotification(`üî• ${type.toUpperCase()} mining started!`);
            
            // Mining countdown
            let countdown = 3;
            const timer = setInterval(() => {
                document.getElementById('miningTimer').textContent = `Mining... ${countdown}s`;
                countdown--;
                if (countdown < 0) {
                    clearInterval(timer);
                }
            }, 1000);
            
            setTimeout(async () => {
                minedBalance += reward;
                userBalance = minedBalance + receivedBalance;
                totalTasksCompleted++;
                
                // Add transaction
                const transaction = {
                    id: generateTransactionId(),
                    type: 'mining',
                    subtype: type,
                    amount: reward,
                    timestamp: new Date().toISOString(),
                    status: 'completed'
                };
                transactionHistory.unshift(transaction);
                
                updateDisplay();
                await saveUserData();
                
                document.getElementById('miningStatus').textContent = 'Completed';
                document.getElementById('miningTimer').textContent = 'Ready to mine!';
                showNotification(`‚úÖ Earned ${reward.toFixed(4)} iKb!`);
                
                debugLog(`‚úÖ Mining complete: +${reward.toFixed(4)} iKb`, 'success');
                
                // Enable buttons
                document.getElementById('sovereignBtn').disabled = false;
                document.getElementById('valueBtn').disabled = false;
                document.getElementById('reserveBtn').disabled = false;
                
                isMining = false;
                
                setTimeout(() => {
                    document.getElementById('miningStatus').textContent = 'Ready';
                }, 2000);
                
            }, 3500);
        }

        // Send KABIRU
        async function sendKabiru() {
            const recipient = document.getElementById('sendRecipient').value.trim();
            const amount = parseFloat(document.getElementById('sendAmount').value);
            const fee = 0.0001;
            const totalAmount = amount + fee;
            const availableBalance = minedBalance + receivedBalance;
            
            if (!recipient) {
                showNotification('Please enter recipient email');
                return;
            }
            
            if (!amount || amount <= 0) {
                showNotification('Please enter valid amount');
                return;
            }
            
            if (totalAmount > availableBalance) {
                showNotification('Insufficient balance');
                return;
            }
            
            try {
                debugLog('üí∏ Sending tokens...', 'info');
                
                // Deduct from sender
                if (minedBalance >= totalAmount) {
                    minedBalance -= totalAmount;
                } else {
                    const remaining = totalAmount - minedBalance;
                    minedBalance = 0;
                    receivedBalance -= remaining;
                }
                
                // Try to find recipient in Firestore
                if (db) {
                    try {
                        const recipientQuery = await db.collection('users').where('email', '==', recipient).limit(1).get();
                        
                        if (!recipientQuery.empty) {
                            const recipientDoc = recipientQuery.docs[0];
                            await db.collection('users').doc(recipientDoc.id).update({
                                receivedBalance: firebase.firestore.FieldValue.increment(amount)
                            });
                            debugLog('‚úÖ Recipient found and credited', 'success');
                        } else {
                            debugLog('‚ö†Ô∏è Recipient not found', 'info');
                        }
                    } catch (error) {
                        debugLog('‚ö†Ô∏è Recipient search error: ' + error.message, 'error');
                    }
                }
                
                // Add transaction
                const transaction = {
                    id: generateTransactionId(),
                    type: 'send',
                    recipient: recipient,
                    amount: amount,
                    fee: fee,
                    timestamp: new Date().toISOString(),
                    status: 'completed'
                };
                transactionHistory.unshift(transaction);
                
                updateDisplay();
                await saveUserData();
                
                showNotification(`‚úÖ Sent ${amount.toFixed(4)} iKb!`);
                debugLog(`‚úÖ Transfer complete`, 'success');
                
                // Clear inputs
                document.getElementById('sendRecipient').value = '';
                document.getElementById('sendAmount').value = '';
                
                closeModal('sendReceiveModal');
                
            } catch (error) {
                debugLog('‚ùå Send error: ' + error.message, 'error');
                showNotification('Transfer failed');
            }
        }

        // Copy wallet address
        function copyAddress() {
            if (navigator.clipboard) {
                navigator.clipboard.writeText(userWalletAddress).then(() => {
                    showNotification('üìã Address copied!');
                }).catch(() => {
                    fallbackCopy(userWalletAddress);
                });
            } else {
                fallbackCopy(userWalletAddress);
            }
        }

        function fallbackCopy(text) {
            const textArea = document.createElement('textarea');
            textArea.value = text;
            document.body.appendChild(textArea);
            textArea.select();
            try {
                document.execCommand('copy');
                showNotification('üìã Address copied!');
            } catch (err) {
                showNotification('Copy failed');
            }
            document.body.removeChild(textArea);
        }

        // Share wallet address
        function shareAddress() {
            const shareText = `Send KABIRU tokens to: ${userWalletAddress}`;
            
            if (navigator.share) {
                navigator.share({
                    title: 'My KABIRU Wallet',
                    text: shareText
                }).then(() => {
                    showNotification('üì± Shared!');
                }).catch(() => {
                    copyAddress();
                });
            } else {
                copyAddress();
            }
        }

        // Open modals
        function openWalletModal() {
            document.getElementById('walletAddress').textContent = userWalletAddress;
            document.getElementById('walletMinedBalance').textContent = minedBalance.toFixed(4) + ' iKb';
            document.getElementById('walletReceivedBalance').textContent = receivedBalance.toFixed(4) + ' iKb';
            document.getElementById('walletLockedBalance').textContent = lockedBalance.toFixed(4) + ' iKb';
            document.getElementById('walletReserveBalance').textContent = reserveBalance.toFixed(4) + ' iKb';
            document.getElementById('walletTotalBalance').textContent = (minedBalance + receivedBalance + lockedBalance + reserveBalance).toFixed(4) + ' iKb';
            document.getElementById('walletModal').style.display = 'block';
        }

        function openSendReceiveModal() {
            document.getElementById('availableToSend').textContent = (minedBalance + receivedBalance).toFixed(4) + ' iKb';
            document.getElementById('receiveAddress').textContent = userWalletAddress;
            document.getElementById('sendReceiveModal').style.display = 'block';
            closeModal('walletModal');
        }

        function openTransactionHistoryModal() {
            displayTransactionHistory();
            document.getElementById('transactionHistoryModal').style.display = 'block';
            closeModal('walletModal');
        }

        function openProfileModal() {
            document.getElementById('profileModal').style.display = 'block';
        }

        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';
        }

        // Display transaction history
        function displayTransactionHistory() {
            const list = document.getElementById('transactionList');
            
            if (transactionHistory.length === 0) {
                list.innerHTML = '<div style="text-align: center; opacity: 0.7; font-size: 14px; padding: 20px;">No transactions yet</div>';
                return;
            }
            
            let html = '';
            transactionHistory.slice(0, 20).forEach(tx => {
                const date = new Date(tx.timestamp).toLocaleDateString();
                const time = new Date(tx.timestamp).toLocaleTimeString();
                let icon = '‚ö°';
                let amountClass = 'positive';
                let amountText = `+${tx.amount.toFixed(4)} iKb`;
                let description = '';
                
                if (tx.type === 'mining') {
                    icon = '‚õèÔ∏è';
                    description = `${tx.subtype} mining`;
                } else if (tx.type === 'send') {
                    icon = 'üì§';
                    amountClass = 'negative';
                    amountText = `-${tx.amount.toFixed(4)} iKb`;
                    description = `Sent to ${tx.recipient}`;
                } else if (tx.type === 'receive') {
                    icon = 'üì•';
                    description = `Received from ${tx.sender || 'Unknown'}`;
                }
                
                html += `
                    <div class="transaction-item">
                        <div class="transaction-icon">${icon}</div>
                        <div class="transaction-details">
                            <div class="transaction-title">${description}</div>
                            <div class="transaction-time">${date} ${time}</div>
                        </div>
                        <div class="transaction-amount ${amountClass}">${amountText}</div>
                    </div>
                `;
            });
            
            list.innerHTML = html;
        }

        // Email verification handler
        async function handleEmailVerificationLink(oobCode) {
            debugLog('üìß Processing verification link', 'info');
            try {
                await auth.applyActionCode(oobCode);
                debugLog('‚úÖ Email verified!', 'success');
                window.history.replaceState({}, document.title, window.location.pathname);
                showNotification('Email verified! Please sign in.');
                setTimeout(() => showLogin(), 2000);
            } catch (error) {
                debugLog('‚ùå Verification error: ' + error.message, 'error');
                showNotification('Verification failed.');
                setTimeout(() => showLogin(), 2000);
            }
        }

        // Auth state listener
        function setupAuthListener() {
            debugLog('üëÇ Auth listener active', 'info');
            
            auth.onAuthStateChanged(async (user) => {
                if (user) {
                    debugLog('üë§ User: ' + user.email, 'info');
                    await user.reload();
                    
                    if (user.emailVerified) {
                        debugLog('‚úÖ Email verified', 'success');
                        currentUser = user;
                        await loadUserData(user);
                        showMiningApp();
                    } else {
                        debugLog('‚ö†Ô∏è Not verified', 'info');
                        showVerification();
                    }
                } else {
                    debugLog('üë§ No user', 'info');
                    showLoginPage();
                }
            });
        }

        // Login
        async function handleLogin() {
            const email = document.getElementById('loginEmail').value.trim();
            const password = document.getElementById('loginPassword').value;
            
            if (!email || !password) {
                showNotification('Please fill in all fields');
                return;
            }
            
            try {
                debugLog('üîê Login attempt', 'info');
                const cred = await auth.signInWithEmailAndPassword(email, password);
                
                if (!cred.user.emailVerified) {
                    showNotification('Please verify your email first');
                    await auth.signOut();
                    return;
                }
                
                debugLog('‚úÖ Login successful', 'success');
                showNotification('Login successful!');
            } catch (error) {
                debugLog('‚ùå Login error: ' + error.message, 'error');
                showNotification('Login failed: ' + error.message);
            }
        }

        // Signup
        async function handleSignup() {
            const name = document.getElementById('signupName').value.trim();
            const email = document.getElementById('signupEmail').value.trim();
            const password = document.getElementById('signupPassword').value;
            
            if (!name || !email || !password) {
                showNotification('Please fill in all fields');
                return;
            }
            
            if (password.length < 6) {
                showNotification('Password must be 6+ characters');
                return;
            }
            
            try {
                debugLog('üìù Creating account', 'info');
                const cred = await auth.createUserWithEmailAndPassword(email, password);
                await cred.user.updateProfile({ displayName: name });
                await cred.user.sendEmailVerification({
                    url: window.location.origin + window.location.pathname,
                    handleCodeInApp: false
                });
                debugLog('‚úÖ Account created', 'success');
                showNotification('Account created! Check email.');
                showVerification();
            } catch (error) {
                debugLog('‚ùå Signup error: ' + error.message, 'error');
                showNotification('Signup failed: ' + error.message);
            }
        }

        // Check verification
        async function checkVerification() {
            if (auth.currentUser) {
                await auth.currentUser.reload();
                if (auth.currentUser.emailVerified) {
                    showNotification('Verified! Logging in...');
                    setTimeout(() => {
                        currentUser = auth.currentUser;
                        loadUserData(auth.currentUser);
                        showMiningApp();
                    }, 1500);
                } else {
                    showNotification('Not verified yet. Check email.');
                }
            }
        }

        // Logout
        async function logout() {
            try {
                await saveUserData();
                await auth.signOut();
                currentUser = null;
                userBalance = 0;
                minedBalance = 0;
                receivedBalance = 0;
                totalTasksCompleted = 0;
                transactionHistory = [];
                debugLog('üö™ Logged out', 'info');
                showNotification('Logged out');
                showLoginPage();
            } catch (error) {
                debugLog('‚ùå Logout error: ' + error.message, 'error');
            }
        }

        // UI functions
        function showLoginPage() {
            document.getElementById('loginPage').style.display = 'flex';
            document.getElementById('miningApp').style.display = 'none';
            showLogin();
        }

        function showMiningApp() {
            document.getElementById('loginPage').style.display = 'none';
            document.getElementById('miningApp').style.display = 'block';
        }

        function showLogin() {
            document.getElementById('loginContainer').classList.remove('hidden');
            document.getElementById('signupContainer').classList.add('hidden');
            document.getElementById('verificationContainer').classList.add('hidden');
        }

        function showSignup() {
            document.getElementById('loginContainer').classList.add('hidden');
            document.getElementById('signupContainer').classList.remove('hidden');
            document.getElementById('verificationContainer').classList.add('hidden');
        }

        function showVerification() {
            document.getElementById('loginContainer').classList.add('hidden');
            document.getElementById('signupContainer').classList.add('hidden');
            document.getElementById('verificationContainer').classList.remove('hidden');
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modals = document.querySelectorAll('.modal');
            modals.forEach(modal => {
                if (event.target == modal) {
                    modal.style.display = 'none';
                }
            });
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            debugLog('üìÑ DOM loaded', 'success');
            
            const urlParams = new URLSearchParams(window.location.search);
            const mode = urlParams.get('mode');
            const oobCode = urlParams.get('oobCode');
            
            if (mode === 'verifyEmail' && oobCode) {
                handleEmailVerificationLink(oobCode);
            } else {
                setupAuthListener();
            }
        });

        debugLog('‚úÖ Phase 2 loaded successfully', 'success');
    </script>
</body>
</html>
